<h1>Listing Admins</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Show', admin %></td>
        <% if !(admin.email == "admin@ncsu.edu") && !(admin == current_admin) %>
            <td><%= link_to 'Destroy', destroy_admin_path(admin), data: {confirm: 'Are you sure?'} %></td>
        <% else %>
            <td></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_path %>
