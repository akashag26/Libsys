<p id="notice"><%= notice %></p>
<!--Search Books-->
<%= form_tag books_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
<% end %>

<h1>Listing Books</h1>

<table class="table">
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Status</th>
    <% if user_logged_in? %>
        <th></th>
    <% end %>

    <% if admin_logged_in? %>
        <th>Edit</th>
        <th>Delete</th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @books.order("created_at DESC").each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.desc %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <% if user_logged_in? %>
            <% if book.status == "In Library" %>
                <td><%= link_to 'Checkout Book', create_checkout_path(book) %></td>
            <% end %>
        <% end %>
        <% if (book.status == "Checked out") %>
            <% if (!current_user.books.find_by_id(book.id).nil?) %>
                <td><%= link_to 'Return', update_checkout_path(book), data: {confirm: 'Return Book?'} %>
                </td>
            <% else %>
                <td></td>
            <% end %>
        <% end %>
        <% if admin_logged_in? %>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', books_path(book), method: :delete, data: {confirm: 'Are you sure you delete the book?'} %></td>
        <% end %>
      </tr>
      </tbody>
  <% end %>
  </table>

<% if admin_logged_in? %>
    <%= link_to 'New Book', new_book_path %>
<% end %>
