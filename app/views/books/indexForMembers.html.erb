<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<%= form_tag(books_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Books" %>
    <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Authors</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% if @books.present? %>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.description %></td>
            <td><%= book.authors %></td>
            <td><%= book.status %></td>
            <td><%= link_to 'Show', book %></td>
          </tr>
      <% end %>
  <% else %>
      <p>There are no books containing the term(s) <%= params[:search] %>.</p>
  <% end %>

</table>

<br>
