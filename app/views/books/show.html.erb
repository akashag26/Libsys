<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>ISBN:</strong>
  <%= @book.isbn %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Authors:</strong>
  <%= @book.authors %>
</p>

<p>
  <strong>Status:</strong>
  <%= @book.status %>
</p>

<p>
  <% if current_admin.present? && @book.borrower.present?%>
      <strong>Borrower:</strong>
      <%= @book.borrower %>
  <%end%>
</p>

<%if @book.status == "Available" && current_user.present?%>
    <%= link_to "Check Out Book", borrow_book_path(@book), :class => 'btn' %> |
<%end%>
<% if current_admin.present? %>
    <%= link_to 'Edit', edit_book_path(@book) %> |
<%end%>
<%= link_to 'Back', books_path %>
