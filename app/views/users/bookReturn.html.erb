<% provide(:title, "bookReturn") %>
<p id="notice"><%= notice %></p>

<h1>Currently Checked Out Books</h1>
<table cellpadding="10">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Authors</th>
    <!--<th>ISBN</th>-->
    <th>Status</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.authors %></td>
        <!--<td><%= book.ISBN %></td>-->
        <td><%= book.status %></td>
        <td><%= link_to 'Return Book ', book.status = "Available" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Back', users_path %>
