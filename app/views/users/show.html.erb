<% provide(:title, "User details") %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<% if current_user.present? %>
<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>
<%end%>

<p>
  <%= link_to 'Checkout Book', indexForMembers_book_path %>
</p>

<p>

  <h1>Currently Checked Out Books</h1>
    <table cellpadding="10">
      <thead>
      <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Description</th>
        <th>Authors</th>
        <th colspan="1"></th>
      </tr>
      </thead>

      <tbody>
      <%@books = Book.where(borrower: @user.name) %>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.isbn %></td>
            <td><%= book.description %></td>
            <td><%= book.authors %></td>
            <td><%= link_to 'Return Book ', return_book_path(book.id), :class => 'btn' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>
